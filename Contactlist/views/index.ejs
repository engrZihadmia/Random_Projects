</head>

<body>

  <!doctype html>
  <html lang="en">

  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <title>Contat List</title>
  </head>

  <body>

    <div class="container">
        <h1 class="text-center text-warning p-2">Add Contact</h1>
    </div>


 <div class="container" style="width: 800px;">
     <form action="/contacts" method="POST" class="">
      <div class="mb-3">
        <label for="NameField" class="form-label">Name</label>
        <input type="text" class="form-control" id="NameField" name="name" />
        <p class="text-danger"><%=Errors.name%></p>
      </div>

      <div class="mb-3">
        <label for="EmailField" class="form-label">Email</label>
        <input type="text" class="form-control" id="EmailField" name="email">
        <p class="text-danger"><%=Errors.email%></p>
      </div>

      <div class="mb-3">
        <label for="PhoneField" class="form-label">Phone</label>
        <input type="text" class="form-control" id="PhoneField" name="phone">
        <p class="text-danger"><%=Errors.phone%></p>
      </div>

      <input type="hidden" class="form-control" id="_Id" name="_id">
      <button type="submit" class="btn btn-primary" id="Submit">Submit</button>
    </form>
 </div>


    <div class="container" >
      <h1 class="text-center text-success p-3"> All Contacts</h1>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>

          <% for(contact of Contacts){ %>

          <tr>
            <td><%= contact.name%></td>
            <td><%= contact.email%></td>
            <td><%= contact.phone%></td>
            <td>

              <button class="btn btn-warning btn-sm" id="Editbtn" onclick='mayfunc(<%- JSON.stringify(contact) %>)'> Edit</button>
              <a href='/contacts/delete/<%=contact._id%>' class="btn btn-danger btn-sm"> Delete</a>

            </td>

          </tr>

          <%}%>
    
    
  </tbody>
</table>
</div>



<script>
let name = document.querySelector("#NameField")
let email = document.querySelector("#EmailField")
let phone = document.querySelector("#PhoneField")
let Id = document.querySelector("#_Id")
let updateBtn=document.querySelector("#Submit")


let mayfunc= (e)=>{
   let contact= e
name.value= contact.name
email.value= contact.email
phone.value= contact.phone
Id.value= contact._id
updateBtn.innerText='Update'
console.log("Clicked")
console.log("Event" , e)



}



</script>

</body>
</html>